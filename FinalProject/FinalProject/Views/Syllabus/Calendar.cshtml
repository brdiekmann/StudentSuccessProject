<script>
    const UPLOAD_URL = '@Url.Action("UploadSyllabus", "Syllabus")';
    const GET_EVENTS_URL = '@Url.Action("GetEvents", "Syllabus")';
    const UPDATE_EVENT_URL = '@Url.Action("UpdateEvent", "Syllabus")';
    const ADD_EVENT_URL = '@Url.Action("AddEvent", "Syllabus")';
    const DELETE_EVENT_URL = '@Url.Action("DeleteEvent", "Syllabus")';
    const COMPLETE_COURSE_URL = '@Url.Action("CompleteCourseDetails", "Syllabus")';

    let calendar;
    let currentEvent = null;
    let selectedFiles = [];
    let pendingCourseQueue = [];
    let currentProcessingIndex = 0;

    document.addEventListener('DOMContentLoaded', function () {
        const calendarEl = document.getElementById('calendar');
            // Character count handlers for ADD modal
    document.getElementById('addEventName').addEventListener('input', function () {
        document.getElementById('addNameCharCount').textContent = this.value.length;
    });

    document.getElementById('addEventDescription').addEventListener('input', function () {
        document.getElementById('addDescCharCount').textContent = this.value.length;
    });

    // Handle all-day checkbox
    document.getElementById('addEventAllDay').addEventListener('change', function() {
        const startInput = document.getElementById('addEventStart');
        const endInput = document.getElementById('addEventEnd');

        if (this.checked) {
            const startVal = startInput.value;
            const endVal = endInput.value;
            startInput.type = 'date';
            endInput.type = 'date';
            if (startVal) startInput.value = startVal.split('T')[0];
            if (endVal) endInput.value = endVal.split('T')[0];
        } else {
            startInput.type = 'datetime-local';
            endInput.type = 'datetime-local';
        }
    });
            calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth',
        headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
        },
        editable: true,
        selectable: true,
        events: GET_EVENTS_URL,
        eventClick: function (info) {
            openEditModal(info.event);
        },
        eventDrop: function (info) {
            updateEventDateTime(info.event);
        },
        eventResize: function (info) {
            updateEventDateTime(info.event);
        },
        eventDidMount: function (info) {
            info.el.title = info.event.extendedProps.description || info.event.title;
            info.el.style.cursor = 'pointer';
        },

        // ← ADD THIS NEW PROPERTY
        viewDidMount: function (info) {
            if (info.view.type === 'listWeek') {
                addHideButtonsToListView();
            }
        }
        // ← END OF NEW PROPERTY
    });

        calendar.render();

    // ==================== LIST WEEK HIDE/SHOW FUNCTIONS ====================

    /**
     * Adds hide/show buttons to each day in the list week view
     */
    function addHideButtonsToListView() {
        setTimeout(() => {
            const dayHeaders = document.querySelectorAll('.fc-list-day-cushion');

            dayHeaders.forEach((header, index) => {
                // Check if button already exists
                if (header.querySelector('.fc-list-hide-day-btn')) {
                    return;
                }

                // Create hide button
                const hideBtn = document.createElement('button');
                hideBtn.className = 'fc-list-hide-day-btn';
                hideBtn.textContent = 'Hide';
                hideBtn.setAttribute('data-day-index', index);

                // Add click handler
                hideBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    toggleDayVisibility(this);
                });

                // Append button to header
                header.appendChild(hideBtn);
            });
        }, 100);
    }

    /**
     * Toggles visibility of events for a specific day
     */
    function toggleDayVisibility(button) {
        const dayIndex = button.getAttribute('data-day-index');
        const dayElement = button.closest('.fc-list-day');

        if (!dayElement) return;

        // Toggle hidden class
        dayElement.classList.toggle('day-hidden');

        // Update button text and style
        if (dayElement.classList.contains('day-hidden')) {
            button.textContent = 'Show';
            button.classList.add('hidden');
        } else {
            button.textContent = 'Hide';
            button.classList.remove('hidden');
        }
    }

    /**
     * Shows all hidden days in list view
     */
    function showAllDays() {
        const hiddenDays = document.querySelectorAll('.fc-list-day.day-hidden');
        hiddenDays.forEach(day => {
            day.classList.remove('day-hidden');
            const btn = day.querySelector('.fc-list-hide-day-btn');
            if (btn) {
                btn.textContent = 'Hide';
                btn.classList.remove('hidden');
            }
        });
    }

    /**
     * Hides all days in list view
