@model FinalProject.Models.AssignmentsViewModel

@{
    ViewBag.Title = "Analysis Result";
}

<h2>Gemini Analysis Result</h2>

@if (Model?.AssignmentList != null && Model.AssignmentList.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Assignment</th>
                <th>Due Date</th>
                <th>Course</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Class Meeting Days</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var assignment in Model.AssignmentList)
            {
                <tr>
                    <td>@assignment.AssignmentName</td>
                    <td>@assignment.DueDate.ToShortDateString()</td>
                    <td>@assignment.course?.CourseName</td>
                    <td>@assignment.course?.StartDate.ToShortDateString()</td>
                    <td>@assignment.course?.EndDate.ToShortDateString()</td>
                    <td>@assignment.course?.ClassMeetingDays</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No assignments found.</p>
}

<a asp-action="Index" asp-controller="Pdf" class="btn btn-primary">Upload another file</a>

