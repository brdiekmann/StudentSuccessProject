@model FinalProject.Models.Entities.SchedulesViewModel

@{
    ViewBag.Title = "Upload Syllabus for Analysis";
}

<h2>Upload Course Syllabus</h2>

<form asp-controller="Pdf" asp-action="UploadSyllabus" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="scheduleSelect">Select Schedule:</label>
        <select id="scheduleSelect" name="scheduleId" class="form-control" required>
            <option value="">-- Choose a schedule --</option>
            @foreach (var schedule in Model.ScheduleList)
            {
                <option value="@schedule.Id">@schedule.Title</option>
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label for="pdfFile">Upload Syllabus (PDF):</label>
        <input type="file" name="pdfFile" accept=".pdf" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Analyze Syllabus</button>
</form>


