@model FinalProject.Models.Entities.Schedule
<link rel="stylesheet" href="~/css/style.css">

<style>
    h2 {
        color: white;
    }

    label {
        color: white;
    }
</style>

<h2>Edit Schedule</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ScheduleDescription">Schedule Description</label>
        <textarea asp-for="ScheduleDescription" class="form-control"></textarea>
        <span asp-validation-for="ScheduleDescription" class="text-danger"></span>
    </div>

    <div class="form-group" style="display: none;">
        <label asp-for="StartDateTime">Start Date <span class="text-warning">(This item can't be changed)</span></label>
        <input asp-for="StartDateTime" class="form-control" type="datetime-local" disabled/>
        <span asp-validation-for="StartDateTime" class="text-danger"></span>
    </div>

    <div class="form-group" style="display: none;">
        <label asp-for="EndDateTime">End Date <span class="text-warning">(This item can't be changed)</span></label>
        <input asp-for="EndDateTime" class="form-control" type="datetime-local" disabled/>
        <span asp-validation-for="EndDateTime" class="text-danger"></span>
    </div>

    <div class="form-check mt-2">
        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
        <label asp-for="IsActive" class="form-check-label">Active</label>
    </div>

    <button type="submit" class="btn btn-success mt-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>

